<h1>Create Creatures!</h1>

<% if @creature.errors.any? %>
  <h4>Error!</h4>
  <% @creature.errors.full_messages.each do |f| %>
    <p> <%= f %> </p>
  <% end %>
<% end %>


<%= form_for @creature, html: {multipart: true} do |f| %>
  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit "create!" %>
<% end %>
